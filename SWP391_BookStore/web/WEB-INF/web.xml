<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>ValidateFilter</filter-name>
        <filter-class>com.bookstore.Filter.ValidateFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ConfirmFilter</filter-name>
        <filter-class>com.bookstore.Filter.ConfirmFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ValidateMailFilter</filter-name>
        <filter-class>com.bookstore.Filter.ValidateMailFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CheckPassFilter</filter-name>
        <filter-class>com.bookstore.Filter.CheckPassFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckPassFilter</filter-name>
        <servlet-name>ResetPassController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ValidateMailFilter</filter-name>
        <servlet-name>PasswordController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ConfirmFilter</filter-name>
        <servlet-name>RegisterController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ValidateFilter</filter-name>
        <servlet-name>LoginController</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.bookstore.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.bookstore.VerifyEmail.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyController</servlet-name>
        <servlet-class>com.bookstore.VerifyEmail.VerifyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendGmailController</servlet-name>
        <servlet-class>com.bookstore.VerifyEmail.SendGmailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordController</servlet-name>
        <servlet-class>com.bookbook.ResetPass.PasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyMailController</servlet-name>
        <servlet-class>com.bookbook.ResetPass.VerifyMailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCodeController</servlet-name>
        <servlet-class>com.bookbook.ResetPass.GetCodeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPassController</servlet-name>
        <servlet-class>com.bookbook.ResetPass.ResetPassController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyController</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendGmailController</servlet-name>
        <url-pattern>/send</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordController</servlet-name>
        <url-pattern>/forgot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyMailController</servlet-name>
        <url-pattern>/getnew</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCodeController</servlet-name>
        <url-pattern>/getcode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPassController</servlet-name>
        <url-pattern>/reset</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
