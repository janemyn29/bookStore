<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>ValidateFilter</filter-name>
        <filter-class>com.bookstore.Filter.ValidateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ValidateFilter</filter-name>
        <servlet-name>LoginController</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.bookstore.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartController</servlet-name>
        <servlet-class>com.bookstore.controller.AddToCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusHomeController</servlet-name>
        <servlet-class>com.bookstore.Customer.CusHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusEditProfileController</servlet-name>
        <servlet-class>com.bookstore.Customer.CusEditProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusViewProfileController</servlet-name>
        <servlet-class>com.bookstore.Customer.CusViewProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartController</servlet-name>
        <url-pattern>/AddToCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CusHomeController</servlet-name>
        <url-pattern>/customer/cushome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CusEditProfileController</servlet-name>
        <url-pattern>/customer/cuseditprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CusViewProfileController</servlet-name>
        <url-pattern>/customer/cusview</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
