        <filter-name>ValidateFilter</filter-name>
        <filter-class>com.bookstore.Filter.ValidateFilter</filter-class>
    </filter>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.bookstore.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartController</servlet-name>
        <servlet-class>com.bookstore.controller.AddToCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusHomeController</servlet-name>
        <servlet-class>com.bookstore.Customer.CusHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusEditProfileController</servlet-name>
        <servlet-class>com.bookstore.Customer.CusEditProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.bookstore.controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingController</servlet-name>
        <servlet-class>com.bookstore.controller.ShoppingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>com.bookstore.controller.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchBookByCategory</servlet-name>
        <servlet-class>com.bookstore.controller.SearchBookByCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailController</servlet-name>
        <servlet-class>com.bookstore.controller.DetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusViewProfileController</servlet-name>
        <servlet-class>com.bookstore.Customer.CusViewProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusCart</servlet-name>
        <servlet-class>com.bookstore.Customer.CusCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusAddItemToCartController</servlet-name>
        <servlet-class>com.bookstore.Customer.CusAddItemToCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusCheckOut</servlet-name>
        <servlet-class>com.bookstore.Customer.CusCheckOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusCartController</servlet-name>
        <servlet-class>com.bookstore.Customer.CusCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusLogOut</servlet-name>
        <servlet-class>com.bookstore.Customer.CusLogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartController</servlet-name>
        <url-pattern>/AddToCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CusHomeController</servlet-name>
        <url-pattern>/customer/cushome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CusEditProfileController</servlet-name>
        <url-pattern>/customer/cuseditprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingController</servlet-name>
        <url-pattern>/shopping</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/CategoryController</url-pattern>
    </servlet-mapping>
