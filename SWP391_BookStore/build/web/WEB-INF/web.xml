<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>ValidateFilter</filter-name>
        <filter-class>com.bookstore.Filter.ValidateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ValidateFilter</filter-name>
        <servlet-name>LoginController</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.bookstore.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImpHomeController</servlet-name>
        <servlet-class>com.bookstore.Importer.ImpHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImpController</servlet-name>
        <servlet-class>com.bookstore.Importer.ImpController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImpReceiptController</servlet-name>
        <servlet-class>com.bookstore.Importer.ImpReceiptController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImpCreateReceiptController</servlet-name>
        <servlet-class>com.bookstore.Importer.ImpCreateReceiptController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImpDetailReceipt</servlet-name>
        <servlet-class>com.bookstore.Importer.ImpDetailReceipt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImpCreateCompanyController</servlet-name>
        <servlet-class>com.bookstore.Importer.ImpCreateCompanyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImpCompanyController</servlet-name>
        <servlet-class>com.bookstore.Importer.ImpCompanyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImpProfileController</servlet-name>
        <servlet-class>com.bookstore.Importer.ImpProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImpHomeController</servlet-name>
        <url-pattern>/importer/imphome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImpController</servlet-name>
        <url-pattern>/importer/ImpController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImpReceiptController</servlet-name>
        <url-pattern>/importer/ImpReceiptController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImpCreateReceiptController</servlet-name>
        <url-pattern>/importer/ImpCreateReceiptController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImpDetailReceipt</servlet-name>
        <url-pattern>/importer/ImpDetailReceipt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImpCreateCompanyController</servlet-name>
        <url-pattern>/importer/ImpCreateCompanyController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImpCompanyController</servlet-name>
        <url-pattern>/importer/ImpCompanyController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImpProfileController</servlet-name>
        <url-pattern>/importer/ImpProfileController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
