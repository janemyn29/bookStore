    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CusCartController</servlet-name>
        <url-pattern>/customer/cuscartcontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CusLogOut</servlet-name>
        <url-pattern>/customer/cuslogout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>customer/cusHome.jsp</welcome-file>
    </welcome-file-list>
